<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Les Restes{% endblock %}</title>
        
        {# --- LIEN CDN BOOTSTRAP 5 --- #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {# Les scripts seront ajoutés à la fin du body #}
        {% endblock %}
    </head>
    <body>
        
        {# --- BARRE DE NAVIGATION BOOTSTRAP --- #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid container">
                <a class="navbar-brand text-success fw-bold" href="{{ path('app_home') }}">
                    {# Conformément à vos wireframes #}
                    LesRestes
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        
                        {# Liens pour les utilisateurs connectés #}
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_recette_index') }}">Recettes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ingredient_index') }}">Ingrédients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_categorie_index') }}">Catégories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            {# Liens pour les visiteurs #}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-success text-white px-3 ms-lg-2" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# --- CONTAINER POUR LE CONTENU ET MESSAGES FLASH --- #}
        <div class="container mt-4">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {# Script JS de Bootstrap à la fin du body #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>