{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Etapes</th>
                <th>Image</th>
                <th>TempsCuisson</th>
                <th>NombrePersonnes</th>
                <th>Difficulte</th>
                <th>Vue</th>
                <th>DateCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.nom }}</td>
                <td>{{ recette.description }}</td>
                <td>{{ recette.etapes }}</td>
                <td>{{ recette.image }}</td>
                <td>{{ recette.tempsCuisson }}</td>
                <td>{{ recette.nombrePersonnes }}</td>
                <td>{{ recette.difficulte }}</td>
                <td>{{ recette.vue }}</td>
                <td>{{ recette.dateCreation ? recette.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_recette_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recette_new') }}">Create new</a>
{% endblock %}
