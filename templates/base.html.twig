<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Les Restes{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/app.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo.svg') }}" alt="Les Restes" height="40" class="me-2">
                    <span class="fw-bold text-success">LeRestes</span>
                </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}" 
                       href="{{ path('app_home') }}">
                        Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_recette' ? 'active' : '' }}" 
                       href="{{ path('app_recette_index') }}">
                        Recettes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_contact' ? 'active' : '' }}" 
                       href="#contact">
                        Contact
                    </a>
                </li>
                
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_profil' ? 'active' : '' }}" 
                           href="{{ path('app_profil') }}">
                            Profil
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-outline-danger btn-sm" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item ms-2">
                        <button class="btn btn-outline-success btn-sm" 
                                data-bs-toggle="modal" 
                                data-bs-target="#registerModal">
                            S'inscrire
                        </button>
                    </li>
                    <li class="nav-item ms-2">
                        <button class="btn btn-success btn-sm" 
                                data-bs-toggle="modal" 
                                data-bs-target="#loginModal">
                            Connexion
                        </button>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

        <!-- Messages Flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show m-3" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Contenu -->
        {% block body %}{% endblock %}

        <footer class="mt-5 py-4 border-top">
            <div class="container">
                <div class="row align-items-start">
            <!-- Logo -->
            <div class="col-md-2 text-center">
                <img src="{{ asset('images/logo.svg') }}" alt="Les Restes" height="40">
            </div>
            
            <!-- Sections -->
            <div class="col-md-2">
                <h6 class="fw-bold mb-2">Mention légales</h6>
                <p class="small text-muted mb-0">Copyright © 2025</p>
            </div>
            <div class="col-md-3">
                <h6 class="fw-bold mb-2">Réseaux sociaux</h6>
                <div class="d-flex gap-2">
                    <a href="#" class="text-muted"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-muted"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="text-muted"><i class="bi bi-tiktok"></i></a>
                    <a href="#" class="text-muted"><i class="bi bi-facebook"></i></a>
                </div>
            </div>
            <div class="col-md-2">
                <h6 class="fw-bold mb-2">Nous contacter</h6>
                <p class="small text-muted mb-0">Nous-contacter@Lereste.com</p>
            </div>
            <div class="col-md-3">
                <h6 class="fw-bold mb-2">Adresse Postale</h6>
                <p class="small text-muted mb-0">666 Rue du Paradis 31000<br>Toulouse</p>
            </div>
            </div>
            </div>
        </footer>

        <!-- MODALE CONNEXION -->
<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-5 pb-5">
                <h3 class="text-success text-center mb-4 fw-bold">Se connecter</h3>
                
                <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" 
                               name="_username" 
                               class="form-control" 
                               placeholder="Entrer votre e-mail"
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mot de passe</label>
                        <input type="password" 
                               name="_password" 
                               class="form-control" 
                               placeholder="••••••••"
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <a href="#" class="text-success small">Mot de passe oublié ?</a>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <button type="submit" class="btn btn-warning w-100 py-2 mb-3 fw-semibold">
                        se connecter
                    </button>
                    
                    <div class="text-center">
                        <span class="text-muted small">Pas de compte ?</span>
                        <a href="#" class="text-success fw-semibold" onclick="switchToRegister(event)">S'inscrire</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- MODALE INSCRIPTION -->
<div class="modal fade" id="registerModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-5 pb-5">
                <h3 class="text-success text-center mb-4 fw-bold">Créer un compte</h3>
                
                <form method="post" action="{{ path('app_register') }}">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nom d'utilisateur</label>
                        <input type="text" 
                               name="prenom" 
                               class="form-control"
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" 
                               name="email" 
                               class="form-control"
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mot de passe</label>
                        <input type="password" 
                               name="password" 
                               class="form-control" 
                               placeholder="••••••••"
                               required>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Confirmer le mot de passe</label>
                        <input type="password" 
                               name="password_confirm" 
                               class="form-control" 
                               placeholder="••••••••"
                               required>
                    </div>
                    
                    <button type="submit" class="btn btn-warning w-100 py-2 mb-3 fw-semibold">
                        S'inscrire
                    </button>
                    
                    <div class="text-center">
                        <span class="text-muted small">Déjà un compte ?</span>
                        <a href="#" class="text-success fw-semibold" onclick="switchToLogin(event)">Se connecter</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Switch entre modales
            function switchToRegister(e) {
                e.preventDefault();
                const loginModal = bootstrap.Modal.getInstance(document.getElementById('loginModal'));
                loginModal.hide();
                const registerModal = new bootstrap.Modal(document.getElementById('registerModal'));
                registerModal.show();
            }
            
            function switchToLogin(e) {
                e.preventDefault();
                const registerModal = bootstrap.Modal.getInstance(document.getElementById('registerModal'));
                registerModal.hide();
                const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                loginModal.show();
            }
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>