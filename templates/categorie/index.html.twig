{% extends 'base.html.twig' %}

{% block title %}Catégories - Les Restes{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Catégories de recettes</h2>
        <a href="{{ path('app_categorie_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter une catégorie
        </a>
    </div>
    
    {% if categories|length > 0 %}
        <div class="row">
            {% for categorie in categories %}
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title d-flex align-items-center">
                                        {% if categorie.couleur %}
                                            <span class="badge me-2" style="background-color: {{ categorie.couleur }};">&nbsp;</span>
                                        {% endif %}
                                        {{ categorie.nom }}
                                    </h5>
                                    {% if categorie.description %}
                                        <p class="card-text text-muted">{{ categorie.description|slice(0, 80) }}...</p>
                                    {% endif %}
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">
                                            <i class="bi bi-eye"></i> Voir
                                        </a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a></li>
                                    </ul>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-journal-text"></i> {{ categorie.recettes|length }} recette{{ categorie.recettes|length > 1 ? 's' : '' }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Aucune catégorie trouvée</h5>
            <p class="text-muted">Créez des catégories pour organiser les recettes.</p>
            <a href="{{ path('app_categorie_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Créer la première catégorie
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}