{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes - Les Restes{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Toutes les recettes</h2>
        {% if app.user %}
            <a href="{{ path('app_recette_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter une recette
            </a>
        {% endif %}
    </div>
    
    {% if recettes|length > 0 %}
        <div class="row">
            {% for recette in recettes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <!-- Prévisualisation image actuelle -->
                         {% if recette.image %}
                            <img src="/uploads/recettes/{{ recette.image }}" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;" 
                                 alt="{{ recette.nom }}">
                        {% else %}
                            <img src="https://source.unsplash.com/300x200/?food" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;" 
                                 alt="{{ recette.nom }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ recette.nom }}</h5>
                            
                            <!-- Étoiles et infos -->
                            {{ stars(recette.moyenneNotes) }}
                            {% if recette.commentaires|length > 0 %}
                                <span class="ms-1 small text-muted">({{ recette.commentaires|length }})</span>
                            {% endif %}
                            
                            <p class="card-text text-muted small">{{ recette.description|slice(0, 80) }}...</p>
                            
                            <!-- Métadonnées -->
                            <div class="row text-center small text-muted mb-3">
                                <div class="col">
                                    <i class="bi bi-clock"></i> {{ recette.tempsCuisson }}min
                                </div>
                                <div class="col">
                                    <i class="bi bi-people"></i> {{ recette.nombrePersonnes }}
                                </div>
                                <div class="col">
                                    {% if recette.difficulte == 1 %}
                                        <i class="bi bi-circle text-success"></i> Facile
                                    {% elseif recette.difficulte == 2 %}
                                        <i class="bi bi-circle-half text-warning"></i> Moyen
                                    {% else %}
                                        <i class="bi bi-circle-fill text-danger"></i> Difficile
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <a href="{{ path('app_recette_show', {'id': recette.id}) }}" class="btn btn-outline-success">
                                    <i class="bi bi-eye"></i> Voir la recette
                                </a>
                            </div>
                        </div>
                        <div class="card-footer text-muted small">
                            Par {{ recette.user.prenom }} {{ recette.user.nom }} • {{ recette.dateCreation|date('d/m/Y') }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-journal-plus text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Aucune recette trouvée</h5>
            <p class="text-muted">Soyez le premier à publier une recette anti-gaspi !</p>
            {% if app.user %}
                <a href="{{ path('app_recette_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Publier une recette
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}