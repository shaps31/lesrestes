{% extends 'base.html.twig' %}

{% block title %}{% if ingredient.id %}Modifier{% else %}Nouvel{% endif %} ingrédient - Les Restes{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <a href="{{ path('app_ingredient_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{% if ingredient.id %}Modifier l'ingrédient{% else %}Nouvel ingrédient{% endif %}</h4>
                    
                    {{ include('ingredient/_form.html.twig', {
                        'button_label': ingredient.id ? 'Mettre à jour' : 'Créer'
                    }) }}
                    
                    {% if ingredient.id %}
                        <div class="mt-4 pt-3 border-top">
                            {{ include('ingredient/_delete_form.html.twig') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}