{% extends 'base.html.twig' %}

{% block title %}{{ categorie.nom }} - Catégorie{% endblock %}

{% block body %}
<div class="container">
    <div class="mb-4">
        <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-tags"></i> {{ categorie.nom }}
                    </h4>
                    {% if categorie.couleur %}
                        <span class="badge" style="background-color: {{ categorie.couleur }};">{{ categorie.couleur }}</span>
                    {% endif %}
                </div>
                
                <div class="card-body">
                    {% if categorie.description %}
                        <p>{{ categorie.description }}</p>
                    {% endif %}
                    
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}