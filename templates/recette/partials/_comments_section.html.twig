<!-- Section Commentaires -->
<div class="container">
    <div class="mb-5">
        <h2 class="text-success mb-4">Commentaires ({{ recette.commentaires|length }})</h2>

        <!-- Formulaire -->
        {% if app.user %}
            <div class="mb-4">
                {{ form_start(commentaireForm) }}
                    <div class="mb-3">
                        {{ form_widget(commentaireForm.contenu, {
                            'attr': {'placeholder': 'Laissez votre avis sur cette recette...'}
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(commentaireForm.note, 'Votre note :') }}
                        <div class="d-flex gap-2" role="radiogroup" aria-label="Choisir une note">
                            {% for choice in commentaireForm.note.vars.choices %}
                                <input type="radio" 
                                       class="btn-check" 
                                       name="{{ commentaireForm.note.vars.full_name }}" 
                                       id="note{{ choice.value }}" 
                                       value="{{ choice.value }}">
                                <label class="btn btn-outline-warning btn-sm" for="note{{ choice.value }}">
                                    <i class="bi bi-star-fill" aria-hidden="true"></i> {{ choice.value }}
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning">
                        Publier le commentaire
                    </button>
                {{ form_end(commentaireForm) }}
            </div>
        {% endif %}

        <!-- Liste commentaires -->
        {% for commentaire in recette.commentaires|reverse %}
            <article class="d-flex mb-3 pb-3 border-bottom">
                <div class="me-3">
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" 
                         style="width: 50px; height: 50px; font-size: 1.5rem;"
                         aria-hidden="true">
                        {{ commentaire.user.prenom|slice(0, 1)|upper }}
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between mb-2">
                        <div>
                            <h3 class="h6 mb-0">{{ commentaire.user.prenom }} {{ commentaire.user.nom|slice(0, 1) }}.</h3>
                            <small class="text-muted">{{ commentaire.dateCreation|date('d/m/Y') }}</small>
                        </div>
                        <div role="img" aria-label="Note : {{ commentaire.note }} sur 5">
                            {% for i in 1..5 %}
                                <i class="bi bi-star{{ i <= commentaire.note ? '-fill' : '' }} text-warning" aria-hidden="true"></i>
                            {% endfor %}
                        </div>
                    </div>
                    <p class="mb-0">{{ commentaire.contenu }}</p>
                </div>
            </article>
        {% endfor %}
    </div>
</div>