{% extends 'base.html.twig' %}

{% block title %}Ingrédients - Les Restes{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tous les ingrédients</h2>
        <a href="{{ path('app_ingredient_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un ingrédient
        </a>
    </div>
    
    {% if ingredients|length > 0 %}
        <div class="row">
            {% for ingredient in ingredients %}
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="card-title">{{ ingredient.nom }}</h6>
                                    {% if ingredient.unite %}
                                        <span class="badge bg-light text-dark">{{ ingredient.unite }}</span>
                                    {% endif %}
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}">
                                            <i class="bi bi-eye"></i> Voir
                                        </a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a></li>
                                    </ul>
                                </div>
                            </div>
                            
                            {% if ingredient.description %}
                                <p class="card-text small text-muted mt-2">{{ ingredient.description|slice(0, 60) }}...</p>
                            {% endif %}
                            
                            <small class="text-muted">Créé le {{ ingredient.dateCreation|date('d/m/Y') }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-basket text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Aucun ingrédient trouvé</h5>
            <p class="text-muted">Commencez par ajouter des ingrédients pour enrichir la base de données.</p>
            <a href="{{ path('app_ingredient_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter le premier ingrédient
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}