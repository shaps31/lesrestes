{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }} - Les Restes{% endblock %}

{% block body %}
<div class="container">
    <div class="row min-vh-100 align-items-center">
        <div class="col-lg-8 mx-auto text-center">
            <!-- IcÃ´ne erreur -->
            <div class="mb-4">
                <i class="bi bi-exclamation-circle-fill text-warning" style="font-size: 8rem;"></i>
            </div>

            <!-- Message principal -->
            <h1 class="display-1 fw-bold text-success mb-3">{{ status_code }}</h1>
            <h2 class="mb-4">{{ status_text }}</h2>
            
            <p class="lead text-muted mb-5">
                Une erreur est survenue lors du traitement de votre demande.
            </p>

            <!-- Actions -->
            <div class="mb-5">
                <a href="{{ path('app_home') }}" class="btn btn-success btn-lg me-2">
                    <i class="bi bi-house"></i> Retour a l'accueil
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Page precedente
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}